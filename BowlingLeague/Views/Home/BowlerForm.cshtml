
@{
    ViewData["Title"] = "Bowler Form";
}
@model Bowler


<h1>Register as a Bowler:</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="TeamID">Team Name:</label>
        <select asp-for="TeamID">
            <option value="">Select a team</option>
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select>
        <br />

        <label asp-for="BowlerFirstName">First Name:</label>
        <input asp-for="BowlerFirstName" /> <br />

        <label asp-for="BowlerLastName">Last Name:</label>
        <input asp-for="BowlerLastName" /> <br />

        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" /> <br />

        <label asp-for="BowlerAddress">Address:</label>
        <input asp-for="BowlerAddress" /> <br />

        <label asp-for="BowlerCity">City:</label>
        <input asp-for="BowlerCity" /> <br />

        <label asp-for="BowlerState">State:</label>
        <input asp-for="BowlerState" /> <br />

        <label asp-for="BowlerZip">Zip:</label>
        <input asp-for="BowlerZip" /> <br />

        <label asp-for="BowlerPhoneNumber">Phone Number:</label>
        <input asp-for="BowlerPhoneNumber" /> <br />




        <button type="submit">Register</button>

    </form>

    <link href="~/css/site.css" rel="stylesheet" />
</div>